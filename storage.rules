rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can read/write their own files
    match /userHistory/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporary files for sharing
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // PreDesigns images - public read, admin only write
    match /preDesigns/{categoryId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                   request.auth.uid == 'OBAc1IAmd8fPhOJyKFl0PXx5Kqu1';
    }
  }
}
