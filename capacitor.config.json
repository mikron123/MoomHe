{
  "appId": "com.kalromsystems.moomhe",
  "appName": "MoomHe",
  "webDir": "dist",
  "server": {
    "androidScheme": "https",
    "cleartext": true,
    "allowNavigation": [
      "*.firebase.com",
      "*.firebaseapp.com",
      "*.googleapis.com",
      "*.google.com",
      "*.firebaseio.com",
      "*.cloudfunctions.net"
    ]
  },
  "android": {
    "allowMixedContent": true,
    "captureInput": true,
    "webContentsDebuggingEnabled": true,
    "useLegacyBridge": false
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#1a1a2e",
      "showSpinner": false,
      "androidScaleType": "CENTER_CROP"
    }
  }
}
