rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Allow update only if NOT modifying protected fields
      allow update: if request.auth != null && request.auth.uid == userId && 
                    (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['credits', 'subscription']));
      // Allow create (handled by client initially) but validation could be added here if needed
      // However, generally createOrUpdateUser calls setDoc with merge: true.
      // If it's a new doc, the client creates it. Server trigger will add credits/sub.
      // Client shouldn't be setting credits/sub on create either.
      allow create: if request.auth != null && request.auth.uid == userId &&
                    (!request.resource.data.keys().hasAny(['credits', 'subscription']));
    }
    
    // Users can read/write their own history
    // Admin can read all history
    match /userHistory/{document} {
      allow read: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid == 'OBAc1IAmd8fPhOJyKFl0PXx5Kqu1');
      allow write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.resource.data.userId == request.auth.uid);
    }
    
    // Generation count documents - users can read their own, server can write
    match /genCount/{monthYear}/users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only server can write
    }

    // Support messages - users can create messages with their own UID, no read/update/delete
    match /supportMsgs/{messageId} {
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if false; // Users cannot read or modify support messages
    }

    // Purchases - users can create their own purchase records for server verification
    match /purchases/{purchaseId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Only server can update/delete purchase records
    }

    // Allow reading genCount by deviceId if needed, but generally users query by UID
    // If we wanted to enforce device limits on client side (unlikely), we'd need read access.
    // Keeping it restricted for now.
  }
}
